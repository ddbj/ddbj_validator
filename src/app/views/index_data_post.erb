<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>DDBJ Validation Service</title>

        <link href="/api/client/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
        <link href="/api/client/css/fileinput.min.css" media="all" rel="stylesheet" type="text/css"/>
        <link href="/api/client/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css"/>
        <link href="/api/client/css/style.css" rel="stylesheet" type="text/css"/>
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <h1><a class="navbar-brand" href="#">DDBJ Validation Service</a></h1>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav"></ul>
                </div><!--/.nav-collapse -->
            </div>
        </nav>

        <div class="container user-input">
            <div id="myTabContent" class="tab-content">

                    <div class="input-group">
                        <input id="biosample" class="selected_file" name="biosample" type="file">
                        <input id="executer" name="executer" type="hidden" value="mdb" style="display: none">
                    </div>

                    <div class="sbmt">
                        <div class="row options">
                            <div class="col-sm-1 gutter-0">
                              <button type="button" id="check_data" class="btn btn-default btn-sm">Validate</button>
                            </div>
                        </div>
                    </div>

                <div id="result"></div>
            </div>
        </div>

        <div id="result"></div>

        <footer id="footer">
            <div class="container">
                <p>DDBJ Validation Service</p>
            </div>
        </footer>

        <script src="/api/client/js/jquery-1.12.0.min.js"></script>
        <script>
          $('#check_data').on('click', function(){
            $('#result').text('posting...');
            var sample_file = $('#biosample')[0].files[0];
            var reader = new FileReader();
            reader.readAsText(sample_file);
            reader.onload = function () {
              json_data = reader.result;
              $.ajax({
                url: '/api/validation',
                type: 'POST',
                dataType: 'json',
                data : { 'executer': 'mdb', 'biosample': json_data },
                timeout: 5000,
              })
                .done(function(data) {
                  console.log(data)
                  $('#result').text(data.uuid)
                })
                .fail(function(data) {
                  $('#result').text(data)
                });
            }
          })
        </script>
    </body>
</html>
